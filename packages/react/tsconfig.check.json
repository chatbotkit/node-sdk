{
  "extends": "../../tsconfig.check.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 0,
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2018", "dom"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "../../node_modules/**/*",
    "**/node_modules/**/*",
    "dist/**/*"
  ]
}
