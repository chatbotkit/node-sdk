{
  "extends": "@system/toolchain/tsconfig.build.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["dist", "dist.esm", "dist.cjs"],
  "typedocOptions": {
    "entryPoints": ["src/index.js"],
    "excludePrivate": true,
    "excludeInternal": true,
    "excludeExternals": true
  }
}
